{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "browser": true,
    "jest/globals": true
  },
  "globals": {
    "graphql": true,
    "cy": true
  },
  "rules": {
    "strict": 0,
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
    "react/no-deprecated": "warn",
    "react/no-unescaped-entities": ["error", { "forbid": [">", "}"] }],
    "jest/consistent-test-it": ["error"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": ["jest"]
}
